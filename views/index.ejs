<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <title>Javascript Project</title>
    </head>
    <body>
        <link rel="stylesheet" type="text/css" href="/assets/css/grid.css">
        <link rel="stylesheet" type="text/css" href="/vendors/css/ionicons.min.css">
        <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
        <script src="assets/js/jquery-1.8.0.min.js"></script>
        <script src="/assets/js/script.js"></script>
        <script src="assets/js/functions.js"></script>
        <link rel="stylesheet" type="text/css" href="/assets/css/queries.css">
        <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,300italic' rel='stylesheet' type='text/css'>
        <header>
            <nav class="sticky">
                <div class="row" id="navigation">
                    <img src="/assets/img/logo.jpg" alt="logo" class="logo-black">
                    <ul class="main-nav js--main-nav" id="mainNavigation">
                        <li><a href="">Show All</a></li>
                        <li><a href="">Latest Uploads</a></li>
                        <li><a href="">Top Rated</a></li>
                        <%if(!user){%>
                        <li><a href="users/register">Register</a></li>
                        <li><a href="/users/login">Login</a></li>
                        <%}else{%>
                            <li><a href='/uploadPage' href="#plans">Upload</a></li>
                            <li><a href="/users/logout">Logout</a></li>
                        <%}%>
                    </ul>
                    <!--3 xazis(dapataravebisas) surati-->
                    <a class="mobile-nav-icon js--nav-icon"><i class="ion-navicon-round"></i></a>
                </div>
            </nav>
        </header>
        
        <section class="content-section" id="secion0">
            <div class="row">
                <div class="col one_fourth scroll">
                    <div class="row">
                        <div class="box">
                            <div class="plan-box">
                                <div>
                                    <h3>Popular Tags</h3>
                                </div>
                                <div>
                                    <ul>
                                        <% for(var i =0; i < tags.length;i++){ %>
                                            <li><a class="ion-ios-checkmark-empty icon-small" href="#"></a><%=tags[i].tag%></li>
                                        <%}%>
                                       
                                    </ul>
                                </div>
                                <div class="for-decoration"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="box">
                            <div class="plan-box">
                                <div>
                                    <h3>Popular Posts</h3>
                                </div>
                                <div>
                                    <ul>
                                        <li><i class="ion-ios-checkmark-empty icon-small"></i>Math</li>
                                        <li><i class="ion-ios-checkmark-empty icon-small"></i>Literature</li>
                                        <li><i class="ion-ios-checkmark-empty icon-small"></i>Physics</li>
                                    </ul>
                                </div>
                                <div class="for-decoration"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class = "space">
                    <div class="col three_fourths">
                        <%for(var i=0;i<Object.keys(posts).length;i++){%>
                            <div class="content-box" id="content-box-id">
                            <b><%=posts[i].title%></b>
                                <embed src=<%="/uploads/"+posts[i].username+"/"+posts[i].filename%>  type='application/pdf'>
                                <b>Author:<%=posts[i].username%></b> <b>Tags: <%=posts[i].tags%> </b>
                                </div>
                        <%}%>
                    </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col one_fourth"></div>
                <div class="col three_fourths responive-text-align">
                    <div class="pagination">
                        <a href="#"><i class="ion-arrow-left-c page-icon"></i></a>
                        <a href="#">1</a>
                        <a href="#" class="selected">2</a>
                        <a href="#">3</a>
                        <a href="#">...</a>
                        <a href="#">7</a>
                        <a href="#"><i class="ion-arrow-right-c page-icon"></i></a>
                    </div>
                </div>
            </div>
        </section>
    </body>  
    
</html>